<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body class="gradient">
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    <a href="@Url.Action("Home", "Index")">
                        <img src="@Url.Content("~/Content/images/logo.png")" alt="Finance Consulting Logo" />
                    </a>
                </h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Versichern", "Index", "Home")</li>
                    <li>@Html.ActionLink("Finanzieren", "Index", "Home")</li>
                    <li>@Html.ActionLink("Veranlagen", "Index", "Home")</li>
                    <li>@Html.ActionLink("Service", "Index", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            <div style="float: left">
                @RenderBody()
            </div>
            <div id="sidebar">
                @RenderSection("sidebar")
            </div>
            <div style="clear:both" />
        </div>
        <div id="footer">
        <p>(c) 2012 Finance Consulting Zöttl
        |
        @Html.ActionLink("Impressum", "About", "Home")
        </p>
        </div>
    </div>
</body>
</html>
